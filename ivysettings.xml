<taskdef name="ivy-resolve" classname="org.apache.ivy.ant.IvyResolve"/>
<taskdef name="ivy-retrieve" classname="org.apache.ivy.ant.IvyRetrieve"/>
<ivysettings>
       <credentials host="localhost" realm="Artifactory Realm" username="admin" passwd="admin"/>
        <resolvers>
                
          <url name="artifactory-publish">
                <!-- You can use  m2compatible="true" instead of specifying your own pattern -->
                <artifact pattern="http://localhost:8081/artifactory/local-demo/lib/[artifact].jar"/>
         </url>
        </resolvers>
        
</ivysettings>
